<Window x:Class="PL.Task.SuggestedDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Task"
        mc:Ignorable="d"
        Title="SuggestedDate" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/Task/minipPicture.gif"></ImageBrush>
    </Window.Background>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Label -->
        <Label Content="The time to schedule the project has come. Please insert the Expected date of the project." 
               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"
               FontWeight="Bold" FontSize="18" Foreground="Black"/>

        <!-- DatePicker -->
        <DatePicker Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" FontSize="80" Background="#FFAC3E3E" Foreground="#FF131313" 
                    />
    </Grid>

</Window>
