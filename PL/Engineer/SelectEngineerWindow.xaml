<Window x:Class="PL.Engineer.SelectEngineerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d" Background="YellowGreen" ResizeMode="NoResize"
        Title="Select Engineer" Height="100" Width="200"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel>
        <TextBlock Text="Enter engineer ID:" Width="120"/>
        <TextBox Text="{Binding EngineerId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Width="120"/>
        <Button Content="OK" Click="Select" Width="120"/>
    </StackPanel>
</Window>
