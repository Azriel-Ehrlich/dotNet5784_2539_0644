<Window x:Class="PL.Engineer.EngineerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d" Background="YellowGreen"
        Title="EngineerWindow" Height="450" Width="800"
         DataContext="{Binding CurrentEngineer, RelativeSource={RelativeSource Self}, Mode=TwoWay}">
    <Grid Margin="20,20,20,20">
        <StackPanel>
            <TextBlock Text="Engineer Window :)" FontSize="30"/>
            
            <WrapPanel>
                <TextBlock Text="Name:" Width="120" FontSize="20"/>
                <TextBox Text="{Binding Name, Mode=OneWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Width="120" FontSize="20"/>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="Current Task:" Width="120" FontSize="20"/>
                <TextBlock Text="{Binding Path=Engineer.Task}" Width="120" FontSize="20"/>
            </WrapPanel>
            
            <Separator Height="10" />

            <!-- TODO:> add list here -->
        </StackPanel>
    </Grid>
</Window>
